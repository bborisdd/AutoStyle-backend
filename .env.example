# Порт сервера
PORT=3000

# JWT секретный ключ (ОБЯЗАТЕЛЬНО замените на свой!)
JWT_SECRET=your-super-secret-key-change-it-in-production
JWT_EXPIRES_IN=7d

# Подключение к PostgreSQL
# Для Railway используйте DATABASE_URL
DATABASE_URL=postgresql://user:password@localhost:5432/autostyle

# Или отдельные параметры для локальной разработки
DB_HOST=localhost
DB_PORT=5432
DB_NAME=autostyle
DB_USER=postgres
DB_PASSWORD=your_password

# Режим разработки (development/production)
NODE_ENV=development

# URL фронтенда для CORS (больше не используется, origins захардкожены в server.js)
# FRONTEND_URL=https://bborisdd.github.io
